<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btnShowDialog1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="常用对话框" >
    </Button>

    <Button
        android:id="@+id/btnShowDialog2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="列表对话框" >
    </Button>

    <Button
        android:id="@+id/btnShowDialog3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="列表可选中对话框" >
    </Button>

    <Button
        android:id="@+id/btnShowDialog4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日期设置对话框" >
    </Button>

    <Button
        android:id="@+id/btnShowDialog5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间设置对话框" >
    </Button>

    <Button
        android:id="@+id/btnShowDialog6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="自定义对话框" >
    </Button>

</LinearLayout>